            "",
            "export class ${1:ClassName} extends ${2:extendClassName} {",
            "  constructor(page: Page) {",
            "    super(page);",
            "  }",
            "",
            "  public async ${3:methodName}() {}",
            "",
            "}"
        ]
    },
